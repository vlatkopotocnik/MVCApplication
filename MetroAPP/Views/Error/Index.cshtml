@model IEnumerable<MetroAPP.Models.Error.Error>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <h1 style="padding-top: 100px; padding-left: 100px; color: #000000">ERRORS</h1>
    <table style="margin-left: 100px;margin-bottom: 150px;">
        <thead>
            <tr>
                <th>ERROR ID</th>
                <th style="padding-left: 50px;">ERROR MESSAGE</th>
                <th style="padding-left: 50px;">ERROR USER</th>
                <th style="padding-left: 50px;">ERROR DATE</th>
            </tr>
        </thead>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Id</td>
                <td style="padding-left: 50px;">@item.Message</td>
                <td style="padding-left: 50px;">@item.User</td>
                <td style="padding-left: 50px;">@item.Date</td>
                    <td style="padding-left: 50px;"><span class=" btn btn-primary">@Html.ActionLink("Remove", "RemoveError", "Error", new { errorId = @item.Id }, null)</span></td>
                </tr>
        }
    </table>
